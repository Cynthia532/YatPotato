{
    "compilerOptions": {
      "target": "ESNext",
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "module": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "react-jsx",
      "sourceMap": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@electron/*": ["electron/*"]
      }
    },
    "include": [
      "src/**/*",
      "electron/**/*",
      "types/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }